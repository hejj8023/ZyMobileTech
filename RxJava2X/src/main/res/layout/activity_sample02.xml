<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        tools:context=".activity.Sample01Activity"
        >

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例A-简单事件发送与接收"
                    android:id="@+id/btn_crate_observer"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例B-Consumer应用"
                    android:id="@+id/btn_crate_observer2"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例C-线程调度"
                    android:id="@+id/btn_schedule"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例D-Flowable示例"
                    android:id="@+id/btn_flowable_used"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例E-Flowable操作符--interva"
                    android:id="@+id/btn_con_fi"
                    />


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="示例E-requestId问题分析"
                    android:id="@+id/btn_test_requestId"
                    />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="网络请求"
                    android:id="@+id/btn_practice_01"
                    />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>