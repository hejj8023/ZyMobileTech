<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context="com.example.bmpa.MainActivity">

    <Button
            android:id="@+id/btn_create_bmp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:text="创建1920x1080尺寸的图片"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_sobmp_scale_target"
            android:layout_width="match_parent"
            android:text="图片缩放至1920x1080"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_sobmp_crop_target"
            android:layout_width="match_parent"
            android:text="原图->图片裁剪700x700"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_scbmp_crop_target"
            android:layout_width="match_parent"
            android:text="缩放图->图片裁剪700x700"
            android:layout_height="wrap_content"/>

</LinearLayout>
