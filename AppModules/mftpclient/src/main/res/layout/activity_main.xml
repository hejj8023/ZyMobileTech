<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.example.mftpclient.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <EditText
                android:id="@+id/et_server_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="服务器ip" />

            <EditText
                android:id="@+id/et_server_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="服务器端口-Tcp(range(1024t65535))"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/et_server_ftp_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="服务器端口-Ftp(range(1024t65535))"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/et_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="login username" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="login password" />

            <EditText
                android:id="@+id/et_filepath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="download file path" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:minWidth="200dp" />

            <Button
                android:id="@+id/btn_download_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="连接并下载图片" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
