<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center_vertical">
	
	<LinearLayout
		android:layout_width="@dimen/dp_320"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_white"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:orientation="vertical"
		android:paddingBottom="@dimen/dp_15"
		android:paddingLeft="@dimen/dp_10"
		android:paddingRight="@dimen/dp_10"
		android:paddingTop="@dimen/dp_15">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/tip_create_ap"
			android:textColor="@color/material_red_accent_200"
			android:textSize="@dimen/dp_18" />
		
		<EditText
			android:id="@+id/et_ap_name"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_45"
			android:layout_marginLeft="@dimen/dp_10"
			android:layout_marginRight="@dimen/dp_10"
			android:layout_marginTop="@dimen/dp_5"
			android:hint="@string/tip_input_ap_name"
			android:textColor="@color/black"
			android:textSize="@dimen/dp_16"
			android:theme="@style/SampleEditText" />
		
		<EditText
			android:id="@+id/et_ap_pwd"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_45"
			android:layout_marginLeft="@dimen/dp_10"
			android:layout_marginRight="@dimen/dp_10"
			android:layout_marginTop="@dimen/dp_10"
			android:hint="@string/tip_input_ap_pwd"
			android:textColor="@color/black"
			android:textSize="@dimen/dp_16"
			android:theme="@style/SampleEditText" />
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_10">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:orientation="horizontal">
				
				<Button
					android:id="@+id/bt_confirm"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_weight="1"
					android:background="@drawable/selector_btn"
					android:paddingBottom="@dimen/dp_5"
					android:paddingLeft="@dimen/dp_15"
					android:paddingRight="@dimen/dp_15"
					android:paddingTop="@dimen/dp_5"
					android:text="连接"
					android:textColor="@color/white" />
				
				<Button
					android:id="@+id/btn_cancel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginLeft="@dimen/dp_15"
					android:layout_weight="1"
					android:background="@drawable/selector_btn"
					android:paddingBottom="@dimen/dp_5"
					android:paddingLeft="@dimen/dp_15"
					android:paddingRight="@dimen/dp_15"
					android:paddingTop="@dimen/dp_5"
					android:text="取消"
					android:textColor="@color/white" />
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>