<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mcamera.MainActivity">

    <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/img_video_new_right"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">

        <ImageButton
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_video_new_delete"
                android:layout_toLeftOf="@+id/btn_take_photo"
                android:layout_marginRight="25dp"
                android:id="@+id/btn_cancel"/>

        <ImageButton
                android:id="@+id/btn_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_video_new_start"
                android:layout_centerInParent="true"/>

        <ImageButton
                android:id="@+id/btn_comfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_video_new_enter"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/btn_take_photo"/>

    </RelativeLayout>
</FrameLayout>
