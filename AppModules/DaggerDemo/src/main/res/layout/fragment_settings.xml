<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:id="@+id/ll_menu_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_logoff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_device_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgrey"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="注册设备"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/btn_mp_android_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/lightgrey"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="MPAndroidChart控件示例"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/btn_filter_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/lightgrey"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="筛选菜单"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/lightgrey"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="修改密码"
            android:textSize="@dimen/dp_16"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_logoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="退出登录"
        android:visibility="gone" />

</RelativeLayout>